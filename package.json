{
  "name": "fetch-reply-with",
  "version": "2.0.0",
  "description": "Mock window.fetch requests to ease unit testing",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test node_modules/.bin/jasmine tests/**/*-spec.js --reporter=jasmine-console-reporter"
  },
  "keywords": [
    "fetch",
    "whatwg-fetch",
    "node-fetch",
    "mock",
    "request",
    "test",
    "http",
    "ajax"
  ],
  "author": "John Doherty <john@orcascan.com> (https://orcascan.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/john-doherty/fetch-reply-with.git"
  },
  "dependencies": {
    "cuid": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jasmine": "^4.5.0",
    "jasmine-console-reporter": "^3.1.0",
    "jasmine-xml-reporter": "^1.2.1"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": false,
      "browser": false
    },
    "globals": {
      "Promise": true,
      "expect": true,
      "it": true,
      "describe": true,
      "beforeEach": true,
      "afterEach": true,
      "Response": true,
      "Headers": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": 0,
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        2,
        180,
        4,
        {
          "ignoreUrls": true,
          "ignoreComments": false
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Router",
            "ObjectId",
            "DEBUG"
          ],
          "properties": false
        }
      ],
      "no-underscore-dangle": 0,
      "no-unused-vars": [
        "warn"
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "vars-on-top": [
        "off"
      ],
      "no-param-reassign": [
        "off"
      ],
      "no-lone-blocks": [
        "off"
      ],
      "padded-blocks": 0,
      "prefer-template": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ],
      "default-case": [
        "off"
      ],
      "wrap-iife": [
        2,
        "inside"
      ],
      "no-plusplus": [
        "off"
      ],
      "require-jsdoc": [
        "warn",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "object-shorthand": [
        "error",
        "never"
      ],
      "space-before-function-paren": "off",
      "strict": "off",
      "valid-jsdoc": [
        "error"
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/john-doherty/fetch-reply-with/issues"
  },
  "homepage": "https://github.com/john-doherty/fetch-reply-with#readme",
  "directories": {
    "lib": "lib"
  }
}
